<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ticktap">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_1_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TickTap">

        <activity
            android:name=".ui.theme.auth.OnboardingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".ui.theme.auth.LoginActivity"
            android:exported="false" />

        <activity
            android:name=".ui.theme.auth.SignUpActivity"
            android:exported="false" />

        <activity
            android:name=".ui.theme.deadlines.AddDeadlineActivity"
            android:exported="false" />

        <activity
            android:name=".ui.theme.notes.AddNoteActivity"
            android:exported="false" />

        <activity
            android:name=".ui.theme.tasks.AddTaskActivity"
            android:exported="false" />

    </application>

</manifest>